{
  "name": "note-macros",
  "displayName": "note-note-macros",
  "description": "An all in one extension for defining Note Macros and executing them from the Command Pallette.",
  "version": "0.0.1",
  "repository": "git@github.com:kneely/note-macros.git",
  "author": "Kevin Neely <kevin.r.neely@outlook.com>",
  "publisher": "Neely Innovations",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Note Macros configuration",
      "properties": {
        "note-macros.list": {
          "type": "object"
        },
        "note-macros.qp-ignore": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Exclude commands from the quick-pick"
        },
        "note-macros.qp-allow": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Include commands to the quick-pick"
        },
        "note-macros.fileExtension": {
          "type": "array",
          "default": ["md"],
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Specify the file extension. Will default to .md"
        },
        "note-macros.filenameFormat": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Specifies how the custom note filename is formatted.",
          "uniqueItems": true
        },
        "note-macros.titleFormat": {
          "type": [
            "array",
            "null"
          ],
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Specifies how the custom note title is formatted. Will default to the filename format if set to null.",
          "uniqueItems": true
        },
        "note-macros.directory": {
          "type": [
            "array",
            "null"
          ],
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "The directory into which custom notes should be created. Defaults to the workspace root.",
          "uniqueItems": true
        },
        "note-macros.dateFormat": {
          "type": ["array", "isoDate"],
          "default": [],
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Specify the Date Format you would like to use. See the [dateformat docs](https://www.npmjs.com/package/dateformat) for valid formats"
        }
      }
    },
    "commands": [
      {
        "command": "note-macros.execute",
        "title": "note-macros: Execute"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/dateformat": "^3.0.1",
    "dateformat": "^3.0.3"
  }
}
